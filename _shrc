#!/bin/bash


export TERM=xterm-256color
export AR_DIR=~/.archive
export MANPAGER="vim -c '%s/_\|.\|\[[0-9]*m//e' -c 'set nonumber buftype=nofile filetype=man' -c 'goto' -"
export EDITOR=vim
export VISUAL=vim
export PAGER=less


alias cd='my_cd'
alias grep='grep --binary-files=without-match --color'
alias less='less -R'
alias locate='locate --basename --existing'
alias ls='ls -AFh --color=auto'
alias screen='screen -DR'
alias sudo='sudo '
alias tm='tmux attach || tmux new'
alias vi=vim
alias view=vim


path_extras="/sbin /usr/sbin /usr/local/sbin $HOME/bin"

for extra in $(echo $path_extras)
do
    test -d $extra && test ":$PATH:" != "*:$extra:*" && PATH="$extra:$PATH"
done


date_color="$(escape $(tput setaf 244))"
cwd_color="$(escape $(tput setaf 39))"
jobs_color="$(escape $(tput setaf 220))"
code_color="$(escape $(tput setaf 160))"
text_color="$(escape $(tput setaf 15))"

if test "$EUID" = 0
then
    host_color="$(escape $(tput setaf 196))"
elif test -n "$SSH_TTY" || test -n "$SUDO_USER"
then
    host_color="$(escape $(tput setaf 178))"
else
    host_color="$(escape $(tput setaf 40))"
fi

my_prompt() {
    previous_code=$?
    pieces=()

    pieces+=("$date_color$(date +%H:%M:%S)")
    pieces+=("$host_color$(whoami)@$(hostname)")

    working_dir="$PWD"
    slashes="${working_dir//[^\/]}"
    if ((${#slashes} > 3))
    then
        for (( i=2; i<${#slashes}; i++ ))
        do
            working_dir="${working_dir#*/}"
        done
    fi
    pieces+=("$cwd_color$working_dir")

    number_of_jobs=$(jobs | wc -l)
    (($number_of_jobs > 0)) && pieces+=("$jobs_color$number_of_jobs")

    (($previous_code > 0)) && pieces+=("$code_color$previous_code")

    PS1="$(escape $(tput bold))${pieces[@]}$text_color "
}


cd_ls() {
    "cd" "$@" && ls
}


my_cd() {
    le_path="$1"
    if test -f "$le_path"
    then
        le_path="$(dirname "$le_path")"
        echo "$le_path"
        cd_ls "$le_path"
        return
    fi
    cd_ls "$@"
}


purge() {
    target="${1:-.}"
    find "$target" -type f -mtime +7 -exec rm {} \;
    find "$target" -type d -empty -exec rmdir {} \;
}


local_config="$HOME/.shrc-local"
test -f "$local_config" && . "$local_config"


true
