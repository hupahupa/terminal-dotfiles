export TERM=xterm-256color
export AR_DIR=~/.archive
export MANPAGER="/bin/sh -c \"col -b | vim -c 'set noma buftype=nofile ft=man' -\""

export EDITOR=vim
export VISUAL=vim
alias vi=vim
alias view=vim

[[ -d ~/bin ]] && export PATH="~/bin:$PATH"

alias ls='ls -AFh --color'
alias grep='grep --color'

alias tmux="tmux attach"
alias screen="screen -DR"

my_cd() {
    "cd" "$@" && ls
}
alias cd="my_cd"

my_rm() {
    for arg in "$@"
    do
        # Clean up old and useless files and dirs
        # Move this thing to the archive
        thing=$(readlink -f "$arg")
        dest_dir="$AR_DIR"$(dirname "$thing")
        mkdir -p "$dest_dir"
        cp -r --backup=numbered "$thing" "$dest_dir" && rm -r "$thing"
    done
}
alias ar=my_rm
