#!/bin/bash

. ~/.shrc

export HISTCONTROL=erasedups
export HISTSIZE=10000
shopt -s histappend

green="\[$(tput setaf 2)\]"
yellow="\[$(tput setaf 3)\]"
blue="\[$(tput setaf 4)\]"
magenta="\[$(tput setaf 5)\]"
white="\[$(tput setaf 7)\]"

if [[ -n $SSH_TTY || -n $SUDO_USER ]]
then
    host_color=$yellow
else
    host_color=$green
fi

if [[ $EUID == 0 ]]
then
    extra_style="\[$(tput smso)\]\[$(tput setab 1)\]"
fi

export PS1="$extra_style\[$(tput bold)\]$magenta[\j] $white\A $host_color\u@\h $blue\W \$\[$(tput sgr0)\] "
